extends ../layout.jade
block contenido
	div(class="")
		div(class=" col-md-4 col-sm-5 col-xs-6 borde borderedondo center-block text-center quitarfloat espacioarriba fondo")
			div(class="center-block text-center quitarfloat borde borderedondo" )
				h3(class="rojoclaro ") Registro Exitoso
			div(class="center-block text-center quitarfloat ")
				h3(class="rojoclaro") Inicio de sesion

			div(class=" center-block text-left quitarfloat fondo")
				form(method="post" action="/cliente/index" style="margin-top:1.5em")
					div(class="form-group text")
						label Usuario o Correo Electronico :   
						input(id="usuarioTf" type="text" name="usuario" placeholder="Usuario o correo electronico" class="form-control" onkeydown="hi" ) 

					div(class="form-group text")
						label Contraseña :   
						input(type="password" name="contrasena" placeholder="Contraseña" class="form-control" ) 
					div(class="form-group text-right")
						input(type="submit" class="btn btn-info" value="Acceder" )
			div(class="center-block text-center quitarfloat espacioarriba fondo")
					a(class="col-md-6" href="/") Inicio
					a(class="col-md-6 " href="/formulario/registro") Registro
		